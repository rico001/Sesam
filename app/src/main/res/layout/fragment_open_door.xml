<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/openDoorFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="@color/design_default_color_primary_dark"
    tools:context=".OpenDoorFragment">


    <include
        layout="@layout/top_toolbar"></include>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="151dp">

        <ImageView
            android:id="@+id/door"
            android:layout_width="226dp"
            android:layout_height="356dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/ic_element_door"
            app:layout_constraintBottom_toTopOf="@+id/buttonOpenDoor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.426"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/doorFrame"
            android:layout_width="226dp"
            android:layout_height="356dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/ic_element_frame"
            app:layout_constraintBottom_toTopOf="@+id/buttonOpenDoor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.426"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/doorFrame2"
            android:layout_width="226dp"
            android:layout_height="356dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/ic_element_frame2"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/buttonOpenDoor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.426"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonOpenDoor"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="36dp"
            android:text="Tür Öffnen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>